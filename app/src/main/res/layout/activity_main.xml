<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lt.kaunascoding.posakiai.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/laukas"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="90"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#25b95f"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:onClick="pirmasPuslapis"
                android:src="@drawable/ic_first_page_black_24dp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:onClick="ankstesnisPuslapis"
                android:src="@drawable/ic_chevron_left_black_24dp" />

            <TextView
                android:id="@+id/puslapis"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:textColor="#133ef0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="1/1"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:onClick="velesnisPuslapis"
                android:src="@drawable/ic_chevron_right_black_24dp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:onClick="paskutinisPuslapis"
                android:src="@drawable/ic_last_page_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>