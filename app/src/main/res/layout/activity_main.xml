<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lt.kaunascoding.posakiai.MainActivity">


    <TextView
        android:id="@+id/laukas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="90"
        android:breakStrategy="simple"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="#008080"
        app:autoSizeMaxTextSize="80dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="1dp"
        app:autoSizeTextType="uniform" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="bookmarkink"
            android:src="@drawable/ic_favorite_border_black_24dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="showBookmarks"
            android:src="@drawable/ic_favorite_black_24dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="sharink"
            android:src="@drawable/ic_share_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center_vertical"
            android:text="LIKE"
            android:textAlignment="center"
            android:textColor="#008080"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center_vertical"
            android:text="HISTORY"
            android:textAlignment="center"
            android:textColor="#008080"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center_vertical"
            android:text="SHARE"
            android:textAlignment="center"
            android:textColor="#008080"
            android:textSize="16dp"
            android:textStyle="bold"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="pirmasPuslapis"
            android:src="@drawable/ic_first_page_black_24dp" />


        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="ankstesnisPuslapis"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:id="@+id/puslapis"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:fontFamily="@font/arima_madurai"
            android:gravity="center_vertical"
            android:text="1 / 1"
            android:textAlignment="center"
            android:textColor="#008080"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="velesnisPuslapis"
            android:src="@drawable/ic_chevron_right_black_24dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="paskutinisPuslapis"
            android:src="@drawable/ic_last_page_black_24dp" />
    </LinearLayout>

</LinearLayout>